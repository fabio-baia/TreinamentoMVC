@model IEnumerable<Treinamento.Models.Album>

@{
    ViewBag.Title = "Busca";
    var context = ViewContext.RequestContext;
    var values = new RouteValueDictionary
    {
        {"controller", "Album"},
        {"action", "Busca"}
    };

    var path = RouteTable.Routes.GetVirtualPath(context, values);
}

<h2>Busca</h2>

@path.VirtualPath
@using (Html.BeginForm("Busca", "Album", FormMethod.Get))
{
    <input type="text" name="q" placeholder="Digite aqui o titulo do album" />
    <input type="submit" value="Buscar" />
}

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Valor)
        </td>
    </tr>
}

</table>
