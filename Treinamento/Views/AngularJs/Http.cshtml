@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
</head>
<body ng-app="myApp" ng-controller="myCtrl" ng-init="field = 'Name'">
<table>
    <tr>
        <th ng-click="field='Name'">Nome</th>
        <th ng-click="field='City'">Cidade</th>
        <th ng-click="field='Country'">País</th>
    </tr>
    <tr ng-repeat="customer in customers | orderBy: field">
        <td>{{customer.Name}}</td>
        <td>{{customer.City}}</td>
        <td>{{customer.Country}}</td>
    </tr>
</table>

<script>
    var app = angular.module('myApp', []);

    app.controller('myCtrl', function($scope, $http) {
        $http.get("http://www.w3schools.com/angular/customers.php").success(function(response) {
            $scope.customers = response.records;
        });
    });
</script>
</body>
</html>
