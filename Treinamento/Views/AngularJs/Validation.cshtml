@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
</head>
<body ng-app="myApp">
<form ng-controller="validateCtrl" name="myForm" novalidate>
    <p>
        Nome<br/>
        <input type="text" name="nome" ng-model="nome" required/>
        <span>
                <span ng-show="myForm.nome.$error.required">Nome é obrigatório</span>
            </span>
    </p>

    <p>
        E-mail<br/>
        <input type="text" name="email" ng-model="email" required/>
        <span>
                <span ng-show="myForm.email.$error.required">E-mail é obrigatório</span>
            </span>
    </p>

    <p>
        <input type="submit" ng-disabled="(myForm.nome.$dirty && myForm.nome.$invalid 
                   || myForm.email.$dirty && myForm.email.$invalid)"/>
    </p>
</form>

<script>
    var app = angular.module('myApp', []);
    app.controller('validateCtrl', function($scope) {
        $scope.nome = "Fabio";
        $scope.email = "baiacfabio@gmail.com";
    });
</script>

</body>
</html>
