@{
    ViewBag.Title = "Cidade";
}

@section scripts{
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
    <script src='@Url.Content("~/Scripts/Cidade/cidadeController.js")'></script>
    <script>
        app.factory('params', function () {
            return {
                urlList: '@Url.Action("AjaxList")',
                urlAdd: '@Url.Action("AjaxAdd")',
                urlRemove: '@Url.Action("AjaxRemove")'
            };
        });
    </script>

    <h2>title</h2>

    <div ng-app="app" ng-controller="CidadeController">
        <form class="form-horizontal" ng-submit="add()">

            <input type="hidden" ng-model="cidade.id" />

            <div class="form-group">
                <label>
                    Cidade
                    <input type="text" name="nome" ng-model="cidade.Nome" class="form-control" />
                </label>
            </div>

            <div class="form-group">
                <label>
                    Uf
                    <input type="text" name="uf" ng-model="cidade.Uf" class="form-control" />
                </label>
            </div>

            <div class="form-group">
                <input class="" type="submit" value="{{editing?'Alterar' : 'Adicionar'}}" />
                <input class="" type="button" ng-show="editing" ng-click="cancel()" value="Cancelar" />
            </div>
        </form>

        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Cidade</th>
                    <th>Estado</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="cidade in cidades">
                    <td>{{cidade.Id}}</td>
                    <td>{{cidade.Nome}}</td>
                    <td>{{cidade.Uf}}</td>
                    <td>
                        <a href="javascript:;" ng-click="edit(cidade)">Editar</a>
                        <a href="javascript:;" ng-click="remove(cidade)">Excluir</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
}
